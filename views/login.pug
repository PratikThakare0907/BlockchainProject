    body
        .jumbotron-fluid.text-center(style='background-color:rgb(5, 57, 61);padding: 40px 20px;')
            h1.font-weight-bold(style='color: #fff; ') PUBLIC DISTRIBUTION SYSTEM
            // <h3><p class="mb-4 font-weight-bold text-uppercase font-weight-bold">Login in PDS</p> </h3>
        .login-container.d-flex.align-items-center.justify-content-center(style='margin-top: 8%;')
            form.login-form.text-center(action="/login/"+type,method="POST")
                if message == 'notok'
                    .alert.alert-danger.alert-dismissible
                        a(href="#" class="close" data-dismiss="alert" aria-label="close")
                            | x
                        | Check username and password
                .form-group
                    input.form-control.rounded-pill.form-control-lg(type='text', name='aadharno', placeholder='Enter Aadhar Number', required='', autofocus='', minlength=12,maxlength=12)
                .form-group
                    input.form-control.rounded-pill.form-control-lg(type='password', name='password', placeholder='Password', minlength=10,maxlength=10)
                .forgot-link.d-flex.align-items-center.justify-content-between
