                        th(scope='col') From
                        th(scope='col') To
                        th(scope='col') Product 1
                        th(scope='col') Product 2
                        th(scope='col') Product 3
                        th(scope='col') Hash
                        th(scope='col') Date/Time   
                    tbody
                        each val in transactions
                            tr
                                td= val.data.from
                                td= val.data.to
                                td= val.data.rice
                                td= val.data.wheet
                                td= val.data.sugar
                                td= val.hash
                                td= val.timestamp

